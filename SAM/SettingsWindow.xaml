<Window x:Class="SAM.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAM"
        mc:Ignorable="d"
        Title="SAM Settings" Height="133" Width="198" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Topmost="True" Icon="Steam-icon (1).ico">
    <Grid Background="#FF252729">
        <Label x:Name="NumPerRowLabel" Content="Accounts/Row" HorizontalAlignment="Left" Margin="10,17,0,0" VerticalAlignment="Top" Foreground="#FFD1D1D1"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="105,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="36" TextChanged="textBox_TextChanged" ToolTip="Adjust the number of accounts displayed per row"/>
        <Button x:Name="OKButton" Content="OK" HorizontalAlignment="Left" Margin="60,56,0,0" VerticalAlignment="Top" Width="65" Height="30" Click="OKButton_Click"/>
    </Grid>
</Window>
